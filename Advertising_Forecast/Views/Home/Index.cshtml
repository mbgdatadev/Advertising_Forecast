@model PredictionModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
   
    <div class="col-lg-6 offset-3">
        <h2 class="text-center">Sales Prediction</h2>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <form asp-controller="Home" asp-action="Index" method="post">
            <div class="form-group">
                <label class="form-label">TV</label>
                <input type="number" step="0.01" asp-for="TV" class="form-control"  />
            </div>
            <span asp-validation-for="TV" class="text-danger mt-1"></span>
            <div class="form-group mt-3">
                <label class="form-label">Radio</label>
                <input type="number" step="0.01" asp-for="Radio" class="form-control" />
            </div>
            <span asp-validation-for="Radio" class="text-danger mt-1"></span>

            <div class="form-group mt-3">
                <label class="form-label">Newspaper</label>
                <input type="number" step="0.01" asp-for="Newspaper" class="form-control" />
            </div>
            <span asp-validation-for="Newspaper" class="text-danger mt-1"></span>

            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">Predict</button>
            </div>
           

        </form>


        @if (ViewBag.Prediction != null)
        {
            <div class="mt-3">
                <h4>Prediction Result:</h4>
                <p>Sales Prediction: @ViewBag.Prediction</p>
            </div>
        }

    </div>
</div>




